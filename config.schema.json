{
  "pluginAlias": "DMXLightHomebridgePlugin",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "DMX Light"
      },
      "ipAddress": {
        "title": "IP Address (Streaming ACN only)",
        "type": "string",
        "required": true,
        "default": "192.168.1.2"
      },
      "serialPortName": {
        "title": "Serial Port Name (Enttec Pro only)",
        "type": "string",
        "required": true,
        "default": "/dev/ttyUSB0"
      }
    }
  }
}